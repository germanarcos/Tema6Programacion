
public class TragaBolas {
	private String color;
	private int bolasComidas;
	private int maxBolas;
	public TragaBolas(String x, int y){
		bolasComidas=0;
		maxBolas=y;
		color = x.toLowerCase();
	}
	public void visualizar(){
		System.out.println("El tragabolas es de color" + color);
		System.out.println("El tragabolas ha comido "+bolasComidas);
		System.out.println("El tragabolas puede comer "+maxBolas);
	}
	public void comer(){
		if(bolasComidas<maxBolas){
			System.out.println("He comido una bola.");
		}
		else{
			System.out.println("No puedo comer más.");
		}
	}
	public void trotar(){
		if(bolasComidas>=1){
			System.out.println("Estoy trotando.");
			bolasComidas-=1;
		}else{
			System.out.println("No tengo energía para trotar.");
		}
	}
	public void dormir(){
		if(bolasComidas==maxBolas){
			System.out.println("Tripa llena. ZZZZZ");
			bolasComidas/=2;
		}
		else{
			System.out.println("No quiero dormir.");
		}
	}
}
