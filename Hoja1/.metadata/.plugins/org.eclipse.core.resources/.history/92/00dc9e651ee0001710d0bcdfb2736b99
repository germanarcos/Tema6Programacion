
public class TragaBolas {
	String color;
	int bolasComidas;
	int maxBolas;
	public void TragaBolas(String x, int y){
		bolasComidas=0;
		maxBolas=y;
		color = x.toLowerCase();
	}
	public void visualizar(){
		System.out.println("El tragabolas es de color" + color);
		System.out.println("El tragabolas ha comido "+bolasComidas);
		System.out.println("El tragabolas puede comer "+maxBolas);
	}
	public void comer(){
		if(bolasComidas<maxBolas){
			System.out.println("He comido una bola. ");
		}
	}
	
}
