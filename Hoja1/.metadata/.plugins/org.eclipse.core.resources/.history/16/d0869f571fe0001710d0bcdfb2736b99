import java.util.Scanner;

public class Ej3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner teclado = new Scanner(System.in);
		System.out.println("Introduce el color del tragabolas.");
		String color = teclado.nextLine();
		while(color.compareToIgnoreCase("verde")!=0 || 
				color.compareToIgnoreCase("rojo")!=0 || 0!=color.compareToIgnoreCase("amarillo")){
			System.out.println("El color solo puede ser verde, rojo o amarillo.");
			color = teclado.next();
		}
	}

}
